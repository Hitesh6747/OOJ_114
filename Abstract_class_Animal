

import java.util.*;
abstract class Animal{
abstract void eat();
abstract void sleep();
}

class Lion extends Animal{
void eat(){
System.out.println("Lion is a carnivore");
}
void sleep(){
System.out.println("Lion sleeps in a den");
}
}
class Tiger extends Animal{
void eat (){
System.out.println("Tiger is also a carnivore");
}
void sleep(){
System.out.println("Tiger sleeps in forest");
}
}

class Deer extends Animal{
void eat(){
System.out.println("Deer is a herbivore");
}
void sleep(){
System.out.println("deer also sleeps in a forest ");
}
}
 public class Animal_abstractt{
public static void main(String  args[]){
Lion lion= new Lion();
Tiger tiger = new Tiger();
Deer deer = new Deer();
lion.eat();
lion.sleep();
tiger.eat();
tiger.sleep();
deer.eat();
deer.sleep();
}
}
